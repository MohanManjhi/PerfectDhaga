<html lang="en"></html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <style>
        .blurred-bg {
            backdrop-filter: blur(5px);
        }
    </style>
</head>
<body class="min-h-screen flex flex-col bg-gray-100">
    <!-- Header -->
    <%- include("partials/navbar") %>
 
    <%- include("partials/mobile-menu") %>
    <br>
    <br>
    <br>

    <!-- Mobile Menu -->
    <div class="hidden fixed inset-0 z-40 bg-black bg-opacity-50" id="mobileMenuOverlay"></div>
    <div class="hidden fixed top-0 right-0 w-64 h-full bg-white shadow-lg z-50 p-4" id="mobileMenu">
        <button class="text-gray-500 mb-4" id="closeMobileMenuBtn">
            <i class="fas fa-times"></i>
        </button>
        <div class="relative mb-4">
            <input type="search" placeholder="Search products..." class="pl-10 pr-4 py-2 w-full border rounded-full">
            <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
        </div>
        <a href="/become-seller" class="text-primary hover:text-primary-dark transition-colors mb-4 block">Become a Seller</a>
        <button class="text-gray-500 flex items-center mb-4">
            <i class="fas fa-map-marker-alt mr-2"></i>
            Set Location
        </button>
        <button class="text-gray-500 flex items-center">
            <i class="fas fa-user mr-2"></i>
            Login / Signup
        </button>
    </div>

    <main class="flex-grow container mx-auto px-4 py-8">
        <div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-lg">
            <h2 class="text-2xl font-bold text-center mb-4">Login</h2>
            <form id="loginForm" action="/login" method="POST">
                <div class="mb-4">
                    <label class="block text-gray-700">Email or Phone</label>
                    <input type="text" id="login-email" name="emailOrPhone" placeholder="Enter your email or phone" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-200" required>
                </div>
                <div class="mb-6">
                    <label class="block text-gray-700">Password</label>
                    <input type="password" id="login-password" name="password" placeholder="Enter your password" class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-200" required>
                </div>
                <button type="submit" class="w-full bg-black text-white py-2 rounded-lg hover:bg-gray-800">Login</button>
            </form>
            <p class="mt-4 text-center text-gray-600">Don't have an account? <a href="/register" class="text-blue-500 hover:underline">Sign up</a></p>
        </div>
    </main>

    <%- include("partials/footer") %>

    <script src="/js/script.js"></script>
    <script src="/js/login.js"></script>
</body>
</html>